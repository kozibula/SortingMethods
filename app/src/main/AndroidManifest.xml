<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nasko.naz.sortingmethods">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_hashtag"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nasko.naz.sortingmethods.MainActivity"
            android:label="@string/app_name"
			android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SortingActivity"
            android:label="SortingActivity"
            android:parentActivityName="com.nasko.naz.sortingmethods.MainActivity"
            android:theme="@style/AppTheme"
			android:screenOrientation="portrait"/>
    </application>

</manifest>
